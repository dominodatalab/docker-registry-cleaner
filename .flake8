[flake8]
max-line-length = 120
extend-ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
exclude =
    .git,
    __pycache__,
    .venv,
    build,
    dist,
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Scripts need sys.path manipulation before imports
    python/scripts/*.py:E402
    python/main.py:E402
    # Utils and tests need sys.path manipulation before imports
    python/utils/*.py:E402
    tests/*.py:E402
